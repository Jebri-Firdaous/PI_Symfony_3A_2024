<!DOCTYPE html>

<title>User</title>

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>email</th>
                <td>{{ user.email }}</td>
            </tr>
      
      
            <tr>
                <th>Nom_personne</th>
                <td>{{ user.nomPersonne }}</td>
            </tr>
            <tr>
                <th>Prenom_personne</th>
                <td>{{ user.prenomPersonne }}</td>
            </tr>
            <tr>
                <th>Image_personne</th>
                <td>{{ user.imagePersonne }}</td>
            </tr>
            {% if user.roles ==['ADMIN'] %}
            <tr>
                <th>RoleAdmin</th>
                <td>{{ user.roleAdmin }}</td>
            </tr>
            {% else %} 
            <tr>
                <th>Age</th>
                <td>{{ user.age }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ user.genre }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Numero_telephone</th>
                <td>{{ user.numeroTelephone }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsBanned</th>
                <td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
