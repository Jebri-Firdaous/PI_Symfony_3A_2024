.modal {
  display: none; /* Masquer la fen√™tre modale par d√©faut */
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.4); /* Fond semi-transparent */
}

/* Style du contenu de la fen√™tre modale */
.modal-content {
