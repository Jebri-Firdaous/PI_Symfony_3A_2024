{% block javascript %}
<script>
// Obtenez la fen√™tre modale et les boutons de confirmation
var modal = document.getElementById('confirmModal');
var confirmYes = document.getElementById('confirmYes');
var confirmNo = document.getElementById('confirmNo');
var deleteButtons = document.querySelectorAll('.deleteBtn'); // S√©lectionnez tous les boutons de suppression

// Fonction pour afficher la fen√™tre modale
function showModal(event) {
  event.preventDefault(); // Emp√™cher le comportement de clic par d√©faut du lien
  console.log("Show modal function triggered."); // D√©bogage
  modal.style.display = 'block'; // Afficher la fen√™tre modale
  document.body.style.overflow = 'hidden'; // D√©sactiver le d√©filement de la page principale
}

// Fonction pour masquer la fen√™tre modale
function hideModal() {
  console.log("Hide modal function triggered."); // D√©bogage
  modal.style.display = 'none'; // Masquer la fen√™tre modale
  document.body.style.overflow = 'auto'; // Activer le d√©filement de la page principale
}

// Ajoutez un gestionnaire d'√©v√©nements pour le clic sur le bouton "Oui"
confirmYes.addEventListener('click', function() {
  // Redirigez l'utilisateur vers la page de suppression apr√®s confirmation
  var deleteUrl = this.getAttribute('data-delete-url');
  console.log("Confirm Yes button clicked."); // D√©bogage
  window.location.href = deleteUrl;
});

// Ajoutez un gestionnaire d'√©v√©nements pour le clic sur le bouton "Non"
confirmNo.addEventListener('click', hideModal);

// Ajoutez un gestionnaire d'√©v√©nements pour le clic sur les boutons de suppression
deleteButtons.forEach(function(button) {
  button.addEventListener('click', function(event) {
    var deleteUrl = this.getAttribute('href');
    console.log("Delete button clicked."); // D√©bogage
    confirmYes.setAttribute('data-delete-url', deleteUrl);
    showModal(event);
  });
});

</script>
{% endblock %}
