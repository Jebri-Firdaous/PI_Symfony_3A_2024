{# hotel/addHotel.html.twig #}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}

                {# Champs de la formulaire de r√©servation #}
                <div class="mb-3">
                    {{ form_row(form.nomHotel, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.adressHotel, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.prix1, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.prix2, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.prix3, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.numero1, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.numero2, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.numero3, {'attr': {'class': 'form-control'}}) }}
                </div>

                {# Bouton de soumission #}
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
