<form method="post" action="{{ path('app_hotel_delete_Front', {'idHotel': hotel.idHotel}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    {% if hotel is not null %}
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hotel.idHotel) }}">
        <button type="submit" class="btn btn-delete">supprimer</button> {# Ajoutez la classe btn-delete ici #}
    {% else %}
        <p>Hotel not found</p>
    {% endif %}
</form>
