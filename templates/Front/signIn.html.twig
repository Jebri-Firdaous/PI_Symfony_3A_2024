<link href="css/app.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
<title>{% block title %}E-city{% endblock %}</title>

  <link href="{{ asset ('img/icone.png') }}" rel="icon">

{% block section %}

      <main class="d-flex w-100">
         <div class="container d-flex flex-column">
         <div class="row vh-100">
         
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
               <div class="d-table-cell align-middle">
               	<div class="text-center mt-4">
							<a href="{{ path ('app_acceuil')}}">
							<h1 style="color: #37423b; font-size: 35px;">
							<strong>E-CITY</strong>
							</h1>
							</a>
						</div>
                  <div class="card">
                     <div class="card-body">
                        <div class="m-sm-4">
                        
                           <form>
                              <div class="mb-3">
                                 <label class="form-label">Adresse Mail</label>
                                 <input class="form-control form-control-lg" type="email" name="email" placeholder="Saisir votre adresse mail" />
                              </div>
                              <div class="mb-3">
                                 <label class="form-label">Mot de passe</label>
                                 <input class="form-control form-control-lg" type="password" name="password" placeholder="Saisir votre mot de passe" >
                                 <small>
                                 <a href="index.html"> Mot de Passe oublié?</a>
                                 </small>
                              </div>
                              <div>
                                 <label class="form-check">
                                 <input class="form-check-input" type="checkbox" value="remember-me" name="remember-me" >
                                 <span class="form-check-label">
                                 Se souvenir de moi la prochaine fois           
                                 </span>
                                 </label>
                              </div>
                              <div  style="display: flex; justify-content: center; align-items: center;">
    <a href="{{ path('app_acceuil') }}" class="btn btn-lg btn-primary"></a>
</div>

                           </form>
                  
                        </div>
						
                     </div>
					 
                  </div>
				       <div class="card">
                     <div >
                        <div class="m-sm-4">
                        
                          
                           <div style="text-align: center;">
                              <small>
                              Vous n’avez pas de compte? <a href="{{ path ('app_client_signUp')}}">Créer un Compte</a>
                              </small>
                           </div>
                        </div>
						
                     </div>

					 
                  </div>
				  
               </div>
            </div>
         </div>
        
      </main>
      <script src="js/app.js"></script>
{% endblock %}
