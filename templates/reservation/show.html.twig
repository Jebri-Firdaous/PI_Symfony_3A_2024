{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}
{% block section %}


    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>RefReservation</th>
                <td>{{ reservation.refReservation }}</td>
            </tr>
            <tr>
                <th>DureeReservation</th>
                <td>{{ reservation.dureeReservation }}</td>
            </tr>
            <tr>
                <th>PrixReservation</th>
                <td>{{ reservation.prixReservation }}</td>
            </tr>
            <tr>
                <th>DateReservation</th>
                <td>{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TypeChambre</th>
                <td>{{ reservation.typeChambre }}</td>
            </tr>
            
            {# Add a new row to display the hotel name #}
            <tr>
                <th>Hotel</th>
                <td>{{ hotelName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">Back to List</a>

    <a href="{{ path('app_reservation_edit', {'refReservation': reservation.refReservation}) }}">Edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
    {% block body %}
{% endblock %}
{% endblock %}

