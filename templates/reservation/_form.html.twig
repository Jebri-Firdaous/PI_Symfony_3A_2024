{# reservation/addReservation.html.twig #}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}

               <div class="mb-3">
                    {{ form_row(form.idHotel, {'attr': {'class': 'form-control', 'id': 'idHotel'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.dureeReservation, {'attr': {'class': 'form-control'}}) }}
                </div>
               
                <div class="mb-3">
                    {{ form_row(form.dateReservation, {'attr': {'class': 'form-control'}}) }}
                </div>
              
                <div class="mb-3">
                    {{ form_row(form.typeChambre, {'attr': {'class': 'form-control', 'id': 'typeChambre'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.prixReservation, {'attr': {'class': 'form-control'}}) }}
                </div>
                
              
                
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            {{ form_end(form) }}

            <!-- Inclure le script JavaScript Ã  la fin du fichier -->
            <script src="{{ asset('js/reservation.js') }}"></script>
        </div>
    </div>
</div>
