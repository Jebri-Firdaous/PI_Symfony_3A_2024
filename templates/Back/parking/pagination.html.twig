<ul class="pagination">
    {%- for page in pagination.pagesInRange -%}
        {% if page != pagination.page %}
            <li class="page-item"><a class="page-link" href="{{ page.url }}">{{ page.pageNumber }}</a></li>
        {% else %}
            <li class="page-item active"><span class="page-link">{{ page.pageNumber }}</span></li>
        {% endif %}
    {%- endfor -%}
</ul>