<form method="post" action="{{ path('app_article_delete', {'idArticle': article.idArticle}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.idArticle) }}">
    <button class="btn btn-sm" type="submit" style="color: red;"><i class="align-middle" data-feather="trash-2"></i> </button>  
</form>
