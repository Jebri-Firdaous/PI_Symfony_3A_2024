{% extends 'Back/base.html.twig' %}

{% block title %}Back-office - Gestion des articles{% endblock %}

{% block main %}
   <h1 style="font-family: Arial, sans-serif; color: black; font-size: 35px;">Liste des articles :</h1>


    <div class="container">
        <div class="row">
            {% for article in articles %}
                <div class="col-md-12 mb-4">
                    <div class="card article-card">
                        <div class="row no-gutters">
                            <div class="col-md-3">
                                <img src="{{ asset(article.photoArticle) }}" class="card-img-top article-image" style="width: 200px; height: 200px;" >
                            </div>
                            <div class="col-md-9">
                                <div class="card-body">
                                    <h5 class="card-title font-weight-bold" style="color: black;">{{ article.nomArticle }}</h5>
                                    <p class="card-text">Prix: {{ article.prixArticle }}</p>
                                    <p class="card-text">Quantité: {{ article.quantiteArticle }}</p>
                                    <p class="card-text">Type: {{ article.typeArticle }}</p>
                                    <p class="card-text">{{ article.descriptionArticle }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="{{ path('app_article_show_back', {'idArticle': article.idArticle}) }}" class="btn btn-sm btn-outline-secondary"><i class="fas fa-eye"></i> Voir</a>
                                            <a href="{{ path('app_article_edit', {'idArticle': article.idArticle}) }}" class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i> Modifier</a>
                                            {{ include('Back/article/_delete_form.html.twig') }}
                                        </div>
                                        <div>
                            <!-- Ajout d'une icône pour le bouton "Ajouter au panier" -->
                            <a href="{{ path('article_add_to_cart', {'id': article.idArticle}) }}"><i class="bi bi-cart4" style="color: #e80368; font-size: 30px;"></i> Ajouter au panier</a>
                        </div>
                                        <div>
                                            <a href="{{ path('article_add_to_cart', {'id': article.idArticle}) }}"><i class="bi bi-cart4" style="color: #e80368; font-size: 30px;"></i></a>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Ajouter un bouton pour ajouter un nouvel article -->
    <div class="text-center mt-4">
        <a href="{{ path('app_article_new') }}" class="btn btn-success">Ajouter un nouvel article</a>
    </div>
{% endblock %}
