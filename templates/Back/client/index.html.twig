{% extends 'Back/base.html.twig' %}
{% block stylesheets %}
<style>
   .button-link {
   display: block;
   width: fit-content;
   margin: 0 auto;
   text-align: center;
   padding: 10px 20px;
   background-color: #2f64b1;
   color: #fff; /* Couleur du texte blanc */
   text-decoration: none;
   border-radius: 5px;
   }
   .button-link:hover {
   background-color: #4a7abf; /* Couleur de fond plus claire au survol */
