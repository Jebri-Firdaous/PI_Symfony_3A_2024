					<th class="d-none d-md-table-cell">Image</th>
					<th class="d-none d-md-table-cell">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for client in list %}
					<tr>
					<td>{{ client.personne.getNomPersonne() }}</td>
					<td class="d-none d-xl-table-cell">{{ client.personne.getPrenomPersonne() }}</td>
					<td class="d-none d-xl-table-cell">{{ client.genre }}</td>
					<td>{{ client.age }}</span></td>
					<td >{{ client.personne.getNumeroTelephone() }}</td>
					<td >{{ client.personne.getMailPersonne() }}</td>
					<td >    
